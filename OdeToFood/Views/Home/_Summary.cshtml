@model Restaurant

<section class="card">
    <h3 class="card-header">@Model.Name</h3>
    <div class="card-block">
        Cuisine: @Model.Cuisine
    </div>
    <div class="card-footer">
        <a class="btn btn-light" asp-action="Details" asp-route-id="@Model.Id">More</a>
        <a class="btn btn-light" asp-page="/Restaurants/Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</section>